<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="cs.zappos.ilovenougat.model.ZappoProduct" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:imageUrl="@{item.thumbnailImageUrl}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_toEndOf="@id/thumbnail_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/thumbnail_image"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:text="@{item.productName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@{item.brandName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@{item.price}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                app:strikeThroughText="@{item.originalPrice}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                app:strikeThroughText="@{item.percentOff}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</layout>
